<!--苗木参考报价mapper start-->
<mapper namespace="com.goodsoft.yuanlin.domain.dao.SeedlingOfferDao">
    <!--查询苗木参考报价 start-->
    <!--苗木参考报价结果映射 start-->
    <resultMap id="seedlingOfferInfo" type="com.goodsoft.yuanlin.domain.entity.demand.SeedlingOffer">
        <result property="material" column="material"/>
        <result property="specification" column="specification"/>
        <result property="unit" column="unit"/>
        <result property="price" column="price"/>
        <result property="types" column="types"/>
        <result property="comment" column="comments"/>
        <result property="date" column="date"/>
    </resultMap>
    <!--苗木参考报价结果映射 end-->
    <!--查询苗木参考报价sql start-->
    <select id="querySeedlingOfferDao" resultMap="seedlingOfferInfo" parameterType="java.lang.Object">
        SELECT material,specification,unit,price,types,comments,date
        FROM
        gs_seedlingoffer
        <where>
            <if test="price !=null and price !=''">
                and price=#{price}
            </if>
            <if test="mate !=null and mate !=''">
                and material like '%${mate}%'
            </if>
            <if test="tp !=null and tp !=''">
                and types=#{tp}
            </if>
            <if test="spf !=null and spf !=''">
                and specification like '%${spf}%'
            </if>
            <if test="date !=null and date !=''">
                and date like '%${date}%'
            </if>
        </where>
        ORDER BY sid DESC limit #{page},20
    </select>
    <!--查询苗木参考报价sql start-->
    <!--查询苗木参考报价 end-->
    <!--添加苗木参考报价 start-->
    <!--添加苗木参考报价sql-->
    <insert id="addSeedlingOfferDao" parameterType="java.util.List">
        INSERT INTO gs_seedlingoffer (material, specification, unit, price, types, comments, date,fileId)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.material}, #{item.specification}, #{item.unit}, #{item.price}, #{item.types},
            #{item.comment},#{item.date},#{item.fileId})
        </foreach>
    </insert>
    <!--添加苗木参考报价 end-->
</mapper>
        <!--苗木参考报价mapper end-->