    <!--用户签到sql-->
    <insert id="signInDao" parameterType="com.goodsoft.yuanlin.domain.entity.user.SignIn">
        INSERT INTO gs_signin
        (address,latitude,longitude,time,name,company,comp,dept,uid,comments)
        VALUES
        (#{address},#{latitude},#{longitude},#{time},#{name},#{company},#{comp},#{dept},#{uid},#{comments});
    </insert>
</mapper>